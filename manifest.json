{
    "manifest_version": 3,
    "name": "NotebookLLM Quick Add",
    "version": "1.1",
    "description": "One-click add current page to NotebookLLM",
    "permissions": [
        "activeTab",
        "tabs",
        "scripting",
        "storage",
        "sidePanel",
        "declarativeNetRequest",
        "contextMenus",
        "notifications"
    ],
    "host_permissions": [
        "https://notebooklm.google.com/*",
        "<all_urls>"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "side_panel": {
        "default_path": "sidepanel.html"
    },
    "declarative_net_request": {
        "rule_resources": [
            {
                "id": "ruleset_1",
                "enabled": true,
                "path": "rules.json"
            }
        ]
    },
    "action": {
        "default_title": "Open NotebookLLM Sidebar"
    },
    "options_page": "options.html",
    "content_scripts": [
        {
            "matches": [
                "https://notebooklm.google.com/*"
            ],
            "js": [
                "content_script.js"
            ],
            "all_frames": true
        }
    ],
    "commands": {
        "add-current-page": {
            "suggested_key": {
                "default": "Ctrl+Period",
                "mac": "Command+Period"
            },
            "description": "Add current page to NotebookLLM"
        }
    },
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    }
}